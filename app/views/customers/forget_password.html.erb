<%=form_tag action: :recoverypassword, method: :post do%>
<table class="table table.striped">
<tr>
<td><%=label_tag :email%></td>
<td><%=email_field_tag :email%></td>
</tr>
<tr>
<td><%=label_tag :password%></td>
<td><%=password_field_tag :password%></td>
</tr>
<tr>
<td><%=label_tag :confirmpassword%></td>
<td><%=password_field_tag :confirmpassword%></td>
</tr>
<tr>
<td><%=submit_tag"save"%></td>
</tr>
</table>
<%end%>
